# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific environment
if ! [[ "$PATH" =~ "$HOME/.local/bin:$HOME/bin:" ]]
then
    PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi
export PATH

# User specific aliases and functions
if [ -d ~/.bashrc.d ]; then
	for rc in ~/.bashrc.d/*; do
		if [ -f "$rc" ]; then
			. "$rc"
		fi
	done
fi

unset rc

# Starship prompt
eval "$(starship init bash)"

# Set to vi input mode
set -o vi

# Aliases
alias mcstart="cd ~/Minecraft/ArboretumServerCurrent/ && ./start.sh"
#alias vim=nvim
#alias cd=z
#alias ls=lsd

# zoxide
eval "$(zoxide init bash)"

# Misc Environment Variables
EDITOR=nvim

# RubyGems
GEM_HOME="~/.local/share/gem"

# Setting XDG Base direcories
export XDG_DATA_HOME=$HOME/.local/share
export XDG_CONFIG_HOME=$HOME/.config
export XDG_STATE_HOME=$HOME/.local/state
export XDG_CACHE_HOME=$HOME/.cache

# Environment Variables to make stuff use XDG Base Directories properly

# android studio
export ANDROID_HOME="$XDG_DATA_HOME"/android

# bash history
export HISTFILE="${XDG_STATE_HOME}"/bash/history

# gnupg
export GNUPGHOME="$XDG_DATA_HOME"/gnupg

# gradle
export GRADLE_USER_HOME="$XDG_DATA_HOME"/gradle

# gtk-2
export GTK2_RC_FILES="$XDG_CONFIG_HOME"/gtk-2.0/gtkrc

# less
export LESSHISTFILE="$XDG_STATE_HOME"/less/history

# ruby
export BUNDLE_USER_CONFIG="$XDG_CONFIG_HOME"/bundle
export BUNDLE_USER_CACHE="$XDG_CACHE_HOME"/bundle
export BUNDLE_USER_PLUGIN="$XDG_DATA_HOME"/bundle

# wget
alias wget='wget --hsts-file="$XDG_DATA_HOME/wget-hsts"'

# xinit
export XINITRC="$XDG_CONFIG_HOME"/X11/xinitrc

# java
export _JAVA_OPTIONS=-Djava.util.prefs.userRoot="$XDG_CONFIG_HOME"/java

# vim
#export VIMINIT="set nocp | source ${XDG_CONFIG_HOME:-$HOME/.config}/vim/vimrc"

# npm
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME"/npm/npmrc

# libdvdcss
export DVDCSS_CACHE="$XDG_DATA_HOME"/dvdcss

# Stuff for building LineageOS Android
export USE_CCACHE=1
export CCACHE_EXEC=/usr/bin/ccache
export ANDROID_JACK_VM_ARGS="-Dfile.encoding=UTF-8 -XX:+TieredCompilation -Xmx4G"
